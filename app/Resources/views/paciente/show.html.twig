{% extends 'base.html.twig' %}
{% block title %} Pacciente {% endblock %}

{% block body %}
    <h1>Paciente</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paciente.id }}</td>
            </tr>
            <tr>
                <th>Edocivil</th>
                <td>{{ paciente.edoCivil }}</td>
            </tr>
            <tr>
                <th>Ocupacion</th>
                <td>{{ paciente.ocupacion }}</td>
            </tr>
            <tr>
                <th>Estudio</th>
                <td>{{ paciente.estudio }}</td>
            </tr>
            <tr>
                <th>Anoaprobado</th>
                <td>{{ paciente.anoAprobado }}</td>
            </tr>
            <tr>
                <th>Analfabeta</th>
                <td>{% if paciente.analfabeta %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fechanacimiento</th>
                <td>{% if paciente.fechaNacimiento %}{{ paciente.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Procedencia</th>
                <td>{{ paciente.procedencia }}</td>
            </tr>
            <tr>
                <th>Apellidofamilia</th>
                <td>{{ paciente.apellidoFamilia }}</td>
            </tr>
            <tr>
                <th>Cedulajefefamilia</th>
                <td>{{ paciente.cedulaJefeFamilia }}</td>
            </tr>
            <tr>
                <th>Comunidad</th>
                <td>{{ paciente.comunidad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('paciente_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('paciente_edit', { 'id': paciente.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
