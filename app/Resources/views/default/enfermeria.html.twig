                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-12">
                        <div class="thumbnail">
                            <div class="image view view-first">
                                <a href="{{ path('consulta_new') }}"> 
                                    <img style="width: 100%; display: block;" src="{{ asset('bundles/app/seguridad/images/11.jpg')}}" alt="image">
                                    <div class="mask">
                                        <p>Consulta</p>                                               
                                    </div>
                                </a> 
                            </div>

                            <div class="caption">
                                <p><button type="button" id='mi-modal' class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Gestionar</button> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="x_panel tile fixed_height_320">
                <div class="x_title">
                    <h2>Gestionar Expedientes</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>                                    
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-12">
                        <div class="thumbnail">
                            <div class="image view view-first">
                                <a href="{{ path('paciente_index') }}"> 
                                    <img style="width: 100%; display: block;" src="{{ asset('bundles/app/seguridad/images/1.jpg')}}" alt="image">
                                    <div class="mask">
                                        <p>Gestionar Expedientes</p>                                                
                                    </div>
                                </a> 
                            </div>
                            <div class="caption">
                                <p> <a href="{{ path('paciente_index') }}"> Gestionar Expedientes </a>  </p>
                            </div>
                        </div>
                    </div>    
                    <br>
                </div>
            </div>
        </div>
             <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="x_panel tile fixed_height_320">
                <div class="x_title">
                    <h2>Asignar Citas</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>                                    
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-12">
                        <div class="thumbnail">
                            <div class="image view view-first">
                                <a href="{{ path('cita_new') }}">
                                    <img style="width: 100%; display: block;" src="{{ asset('bundles/app/seguridad/images/13.jpg')}}" alt="image">
                                    <div class="mask">
                                        <p> Asignar Citas</p>                                                
                                    </div>
                                </a> 
                            </div>
                            <div class="caption">
                                <p> <a href="{{ path('cita_new') }}"> Asignar Citas </a>  </p>
                            </div>
                        </div>
                    </div>                                   

                    <br>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Lista de Espera <small> </small>{% if (esperandos!=null) %}
                                        <button type="button" class="btn btn-success btn-sm" onclick='window.location.href = "esperando/procesar"'>Llamar Paciente</button>
                                    {% endif %}</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>                                            
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="dashboard-widget-content">
                                <div class="col-md-12 hidden-small">
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Foto</th>
                                                <th>Cédula</th>
                                                <th>Paciente</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for esperando in esperandos %}
                                                {% if (esperando.status=='activo') %}
                                                    <tr>
                                                        <td>{{  esperando.posicion  }} </td>
                                                        <td>
                                                            <span class="image">
                                                                <img src="{{ asset('uploads/fotos/')}}{{esperando.paciente.persona.foto}}" alt="{{esperando.paciente.persona.cedula}}" class="img-rounded" height="50" width="50">
                                                            </span>
                                                        </td>
                                                        <td>{{ esperando.paciente.persona.nacionalidad }} - {{ esperando.paciente.persona.cedula }}</td>
                                                        <td>{{ esperando.paciente.persona.primerApellido }} {{ esperando.paciente.persona.primerNombre }}</td>                                                                                                                                                                       
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                                <div id="world-map-gdp" class="col-md-8 col-sm-12 col-xs-12" style="height:230px;"></div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Pacientes en Observación<small>

                                </small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>                                            
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="dashboard-widget-content">
                                <div class="col-md-12 hidden-small">
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Foto</th>
                                                <th>Cédula</th>
                                                <th>Paciente</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                        </tbody>
                                    </table>
                                </div>
                                <div id="world-map-gdp" class="col-md-8 col-sm-12 col-xs-12" style="height:230px;"></div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
    <br>
    <!-- Large modal -->   
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Consultar Paciente</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(form, { 'attr': {'id':'paciente','class': 'form-horizontal form-label-left'} }) }} 
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nacionalidad">{{ form_label(form.nacionalidad) }} <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_errors(form.nacionalidad) }}                
                            {{form_widget(form.nacionalidad,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="cedula">{{ form_label(form.cedula) }} <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_errors(form.cedula) }}                
                            {{form_widget(form.cedula,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}                
                        </div>
                    </div>




                    {{ form_end(form) }} 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button"  id='miBoton' class="btn btn-primary">Consultar</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <!-- Datatables -->
    <script src="{{ asset('bundles/app/vendors/datatables.net/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('bundles/app/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js')}}"></script>
    <!-- PNotify -->
    <script src="{{ asset('bundles/app/vendors/pnotify/dist/pnotify.js')}}"></script> 
    <script src="{{ asset('bundles/app/vendors/pnotify/dist/pnotify.buttons.js')}}"></script> 
    <script src="{{ asset('bundles/app/vendors/pnotify/dist/pnotify.nonblock.js')}}"></script> 
    <!-- Push -->
    <script src="{{ asset('bundles/app/vendors/push/push.min.js')}}"></script> 
    <script>
        function reloadPagina() {
            location.reload();
        }

        $(document).ready(function () {
            $('#datatable-fixed-header').DataTable({fixedHeader: true});
            setInterval(reloadPagina, 60000);
            //$("#mi-modal").hide();

            $("#form_especialidad").val("Enfermeria");
            $(".medico").hide();
            $("#miBoton").click(function () {
                $("#paciente").submit();
            });
        });</script>
{% endblock %}