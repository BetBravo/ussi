{% extends 'base.html.twig' %}
{% block Subtitulo %} Ver Servicios -  <small> <a href="{{ path('servicio_index') }}">Regresar a la lista</a></small> {% endblock %} 
{% block cerrar %} {% endblock %} 
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}        
        <div class="alert alert-success alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
            </button>
            <strong>{{ msg }}</strong>
        </div>
    {% endfor %}

    {% for msgs in app.session.flashBag.get('error') %}
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <strong>
                {% for msg in msgs %}
                    <p>{{ msg }}</p>
                {% endfor %}
            </strong>
        </div>
    {% endfor %}

    <!-- page content -->
    <div class="x_content">
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="especialidad">Especialidad</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {% set dia = ['Domingo','Lunes','Martes','Miércoles','Jueves','Viernes','Sábado'] %}
                {{ servicio.especialidad.nombre}} 
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="especialidad">Día</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                {% set dia = ['Domingo','Lunes','Martes','Miércoles','Jueves','Viernes','Sábado'] %}
                {{ dia[servicio.dia]}}
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Turno</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                
                {{ servicio.turno|title}}
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Procedencia</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                
                {{ servicio.procedencia| capitalize}}
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">Cupos</label>
            <div class="col-md-6 col-sm-6 col-xs-12">                
                {{ servicio.cupo}}
            </div>
        </div>
        <br />
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                
                <a class="btn btn-success" href="{{ path('servicio_edit', { 'id': servicio.id }) }}"><i class="fa fa-edit m-right-xs"></i>Editar Registro</a>
            </div>
        </div>
    </div>


    {{ form_start(delete_form) }}
    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar </button>
    {{ form_end(delete_form) }}
{% endblock %}