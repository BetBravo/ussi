{% extends 'base.html.twig' %}

{% block body %}
    <h1>Servicio</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ servicio.id }}</td>
            </tr>
            <tr>
                <th>Turno</th>
                <td>{{ servicio.turno }}</td>
            </tr>
            <tr>
                <th>Procedencia</th>
                <td>{{ servicio.procedencia }}</td>
            </tr>
            <tr>
                <th>Cupo</th>
                <td>{{ servicio.cupo }}</td>
            </tr>
            <tr>
                <th>Dia</th>
                <td>{% if servicio.dia==0 %}
                        Domingo
                        {% elseif servicio.dia==1 %}
                            Lunes
                            {% elseif servicio.dia==2 %}
                                Martes
                                {% elseif servicio.dia==3 %}
                                    Miércoles
                                    {% elseif servicio.dia==4 %}
                                        Jueves
                                        {% elseif servicio.dia==5 %}
                                            Viernes
                                            {% elseif servicio.dia==6 %}
                                                Sábado                                            
                                                {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('servicio_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('servicio_edit', { 'id': servicio.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
